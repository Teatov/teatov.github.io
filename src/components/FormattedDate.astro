---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'time'> & {
  date: Date;
};

const { date, ...attrs } = Astro.props;

const postDate = date.toLocaleDateString('en-us', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<time datetime={date.toISOString()} {...attrs}>{postDate}</time>
